# =============================================================================
# Requirements GraphRAG API - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# This file is used by docker-compose for local development

# =============================================================================
# Backend Configuration (see backend/.env.example for full documentation)
# =============================================================================

# Neo4j Connection
NEO4J_URI=neo4j+s://your-neo4j-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-password-here
NEO4J_DATABASE=neo4j

# OpenAI
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o
EMBEDDING_MODEL=text-embedding-3-small

# Vector Index
VECTOR_INDEX_NAME=chunk_embeddings
SIMILARITY_K=6

# Logging
LOG_LEVEL=INFO

# LangSmith Observability (Optional)
LANGSMITH_TRACING=false
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=graphrag-api-dev
# LANGCHAIN_PROJECT=requirements-graphrag  # Legacy alternative

# CORS (for frontend access)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_URL=http://localhost:8000
